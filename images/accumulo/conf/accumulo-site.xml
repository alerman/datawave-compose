<?xml-stylesheet type="text/xsl" href="configuration.xsl"?>

<configuration>
    <property>
        <name>instance.zookeeper.host</name>
        <value>zoo1,zoo2,zoo3</value>
        <description>comma seperated list of zk servers</description>
    </property>

    <property>
        <name>instance.volumes</name>
        <value>hdfs://namenode:8020/accumulo</value>
    </property>

    <property>
        <name>monitor.port.client</name>
        <value>50095</value>
    </property>

    <property>
        <name>instance.secret</name>
        <value>DEFAULT</value>
    </property>

    <property>
        <name>tserver.memory.maps.max</name>
        <value>80M</value>
    </property>

    <property>
        <name>tserver.memory.maps.native.enabled</name>
        <value>true</value>

    </property>

    <property>
        <name>tserver.cache.data.size</name>
        <value>7M</value>

    </property>

    <property>
        <name>tserver.cache.index.size</name>
        <value>20M</value>

    </property>

    <property>
        <name>trace.token.property.password</name>
        <value>accumulo</value>

    </property>

    <property>
        <name>trace.user</name>
        <value>root</value>

    </property>

    <property>
        <name>tserver.sort.buffer.size</name>
        <value>50M</value>

    </property>

    <property>
        <name>tserver.walog.max.size</name>
        <value>100M</value>

    </property>

    <property>
        <name>general.classpaths</name>
        <value>
            $ACCUMULO_HOME/accumulo-server.jar,
            $ACCUMULO_HOME/accumulo-core.jar,
            $ACCUMULO_HOME/accumulo-start.jar,
            $ACCUMULO_HOME/accumulo-fate.jar,
            $ACCUMULO_HOME/accumulo-proxy.jar,
            $ACCUMULO_HOME/lib/[^.].*.jar,
            $ZOOKEEPER_HOME/zookeeper[^.].*.jar,
            $HADOOP_CONF_DIR,
            /usr/lib/hadoop/[^.].*.jar,
            /usr/lib/hadoop/lib/(?!slf4j)[^.].*.jar,
            /usr/lib/hadoop-hdfs/[^.].*.jar,
            /usr/lib/hadoop-mapreduce/[^.].*.jar,
            /usr/lib/hadoop-yarn/[^.].*.jar,
            /usr/lib/hadoop-yarn/lib/jersey.*.jar,
        </value>

    </property>

    <property>
        <name>general.vfs.cache.dir</name>
        <value>/srv/vfs-cache/</value>

    </property>

    <property>
        <name>general.vfs.classpaths</name>
        <value>hdfs://namenode:8020/accumulo-system-classpath/.*.jar</value>

    </property>

    <property>
        <name>general.vfs.classpath.datawave</name>
        <value>hdfs://namenode:8020/accumulo-datawave-classpath/.*.jar</value>

    </property>
</configuration>